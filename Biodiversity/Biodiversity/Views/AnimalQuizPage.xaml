<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biodiversity.Views.AnimalQuizPage">

    <Grid BackgroundColor="#009bd6">

        <Grid Grid.Row="0" Margin="0,10,0,0">
            <StackLayout  Orientation="Vertical" 
                      Margin="30,30" >

                <Label Text="Biodiversity Trivia!" 
                       TextColor="White"
                       FontAttributes="Bold"
                       FontFamily="Lobster-Regular"
                       FontSize="20"/>

                <Label Text="Choose the correct response"
                       TextColor="White"
                       FontAttributes="Italic"
                       FontSize="14"/>

                <Label x:Name="lblpreguntita" 
                       Text="Click Start to Play!" 
                       TextColor="White"
                       FontSize="12"/>
                
            </StackLayout>

            <StackLayout Margin="20, 150,20,20">
                <Button Text="" x:Name="btnresp1"
                    TextColor="White"
                    BackgroundColor="#00719c"
                    BorderColor="White"
                    BorderWidth="3"
                    CornerRadius="10"
                    Clicked="Button1_Clicked" ></Button>

                <Button Text="" x:Name="btnresp2"
                    TextColor="White"
                    BackgroundColor="#00719c"
                    BorderColor="White"
                    BorderWidth="3"
                    CornerRadius="10"
                    Clicked="Button2_Clicked" ></Button>

                <Button Text="" x:Name="btnresp3"
                    TextColor="White"
                    BackgroundColor="#00719c"
                    BorderColor="White"
                    BorderWidth="3"
                    CornerRadius="10"
                    Clicked="Button3_Clicked" ></Button>

                <Button Text="" x:Name="btnresp4"
                    TextColor="White"
                    BackgroundColor="#00719c"
                    BorderColor="White"
                    BorderWidth="3"
                    CornerRadius="10"
                    Clicked="Button4_Clicked" ></Button>

            </StackLayout>

            <Label Text="" x:Name="scoreLabel"
                    TextColor="White"
                    FontAttributes="Bold"
                    HorizontalOptions="EndAndExpand" 
                    Margin="0,0,50,150" 
                    VerticalOptions="EndAndExpand"/>
        </Grid>
    </Grid>
</ContentPage>
